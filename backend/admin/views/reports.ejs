<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Hello Bulma!</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css">
  </head>
  <body>
  <section class="section">
    <div class="container">
        <h1>All reports</h1>

        <table class="table"> 
            <thead>
                <tr>
                    <th>Content</th>
                    <th>Date</th>
                    <th>Nb of reports</th>
                    <th>Nb of bad votes</th>
                    <th>Clean report</th>
                    <th>Delete report</th>
                </tr>
            </thead>
            <tbody>
                <% for ( const report of reports) { %>
                <tr>
                    <td><%= report.content %> </td>
                    <td><%= report.create_date %></td>
                    <td><%= report.report %></td>
                    <td><%= report.down_vote %></td>
                    <td><a href="/admin/reports/<%=report.id%>/clean"><button class="button is-primary">Clean report</button></a></td>
                    <td><a href="/admin/reports/<%=report.id%>/delete"><button class="button is-danger">Delete report</button></a></td>
                </tr>
                <% } %> 
            </tbody>
        </table>      
    </div>
  </section>
  </body>
</html